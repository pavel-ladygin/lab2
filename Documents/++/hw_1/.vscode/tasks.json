{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "clang++",
			"args": [
				"-std=c++17",
				"-I/opt/homebrew/Cellar/boost/1.87.0_1/include",
				"-L/opt/homebrew/Cellar/boost/1.87.0_1/lib",
				"-lboost_system",
				"-lboost_thread",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"${file}"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			],
			"detail": "Generated task by VS Code"
		}
	]
  }